// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int       @id @default(autoincrement())
  title    String
  products Product[]
}

model Product {
  id            Int             @id @default(autoincrement())
  title         String
  img           String
  foods         String
  price         Int
  weight        Int
  category      Category        @relation(fields: [categoryId], references: [id])
  categoryId    Int
  ProductInCart ProductInCart[]
}

model Cart {
  id             Int             @id @default(autoincrement())
  user           User?
  userId         Int?
  productsInCart ProductInCart[]
  promocode      Promocode?      @relation(fields: [promocodeId], references: [id])
  promocodeId    Int?
  Order          Order?
  orderId        Int?
}

model Order {
  id            Int            @id @default(autoincrement())
  status        DeliveryStatus
  whenDelivered DateTime?
  cart          Cart           @relation(fields: [cartId], references: [id])
  cartId        Int            @unique
  orders        Orders?        @relation(fields: [ordersId], references: [id])
  ordersId      Int?
}

model Orders {
  id     Int     @id @default(autoincrement())
  orders Order[]
  user   User    @relation(fields: [userId], references: [id])
  userId Int
}

model ProductInCart {
  id        Int     @id @default(autoincrement())
  count     Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  cartId    Int

  @@unique([productId, cartId])
}

model User {
  id       Int      @id @default(autoincrement())
  password String?
  phone    String?  @unique
  addres   String?
  role     Role     @default(user)
  cart     Cart     @relation(fields: [cartId], references: [id])
  cartId   Int      @unique
  orders   Orders[]
}

model Promocode {
  id           Int          @id @default(autoincrement())
  code         String       @unique
  name         String?
  text         String?
  discountType DiscountType
  value        Int
  expireType   ExpireType
  date         DateTime?
  count        Int?
  counter      Int?
  cart         Cart[]
}

enum DeliveryStatus {
  accepted
  inWork
  enRoute
  delivered
  canceled
}

enum DiscountType {
  fix
  percentage
}

enum ExpireType {
  count
  date
  infinity
}

enum Role {
  admin
  user
}
